---
import HeroWidget from '~/components/widgets/Hero.astro';
import grassGraphic from '~/assets/images/grass.svg';
---

<HeroWidget
  id="hero"
  tagline="Instant mowing quotes."
  title="Mowing Bidder"
  subtitle="Quote mowing jobs in a few seconds. Enter an address. Get a weekly + bi-weekly price based on property square footage and your pricing formula."
  actions={[
    { variant: 'primary', text: 'Get Updates', href: '#get-updates' },
    { variant: 'secondary', text: 'See how it works', href: '#how-it-works' },
  ]}
  imageOnTop
  image={{ src: grassGraphic, alt: 'Stylized grass graphic' }}
/>
