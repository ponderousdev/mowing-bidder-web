---
const {
	title = "MowingBidder â€” Instant mowing quotes",
	description =
		"Enter an address and generate weekly and bi-weekly mowing prices from your own formula in seconds.",
	ogImage = "/og.png",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:image" content={ogImage} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,600;9..144,700&family=Source+Sans+3:wght@400;500;600&display=swap"
		/>
		<title>{title}</title>
		<style>
			:root {
				color-scheme: light;
				--ink: #1a1c1f;
				--muted: #5a6570;
				--field: #f6f4f0;
				--paper: #fffaf2;
				--accent: #1b5f4a;
				--accent-bright: #f8b34d;
				--accent-dark: #124336;
				--line: #e3d9c7;
				--shadow: 0 25px 60px -40px rgba(20, 30, 24, 0.45);
				font-family: "Source Sans 3", "Trebuchet MS", sans-serif;
				scroll-behavior: smooth;
			}

			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			body {
				min-height: 100vh;
				background:
					radial-gradient(circle at 20% 20%, rgba(248, 179, 77, 0.28), transparent 55%),
					radial-gradient(circle at 80% 10%, rgba(27, 95, 74, 0.2), transparent 45%),
					linear-gradient(120deg, #f7efe2 0%, #fdf7ec 42%, #fffdf6 100%);
				color: var(--ink);
				line-height: 1.6;
			}

			img {
				max-width: 100%;
				display: block;
			}

			a {
				color: inherit;
				text-decoration: none;
			}

			main {
				display: flex;
				flex-direction: column;
				gap: 0;
			}

			section {
				padding: 5rem 0;
			}

			.container {
				width: min(1120px, 90vw);
				margin: 0 auto;
			}

			.eyebrow {
				font-size: 0.9rem;
				font-weight: 600;
				letter-spacing: 0.08em;
				text-transform: uppercase;
				color: var(--accent);
			}

			.display {
				font-family: "Fraunces", "Georgia", serif;
				font-weight: 700;
				letter-spacing: -0.02em;
				line-height: 1.05;
			}

			.subtitle {
				font-size: 1.1rem;
				color: var(--muted);
				max-width: 54ch;
			}

			.button {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				gap: 0.5rem;
				padding: 0.85rem 1.6rem;
				border-radius: 999px;
				border: 1px solid transparent;
				font-weight: 600;
				font-size: 1rem;
				transition: transform 0.2s ease, box-shadow 0.2s ease, border 0.2s ease;
				cursor: pointer;
			}

			.button.primary {
				background: var(--accent);
				color: #fefcf7;
				box-shadow: 0 18px 35px -25px rgba(15, 54, 40, 0.7);
			}

			.button.secondary {
				background: transparent;
				border-color: var(--accent);
				color: var(--accent);
			}

			.button:hover {
				transform: translateY(-1px);
				box-shadow: 0 20px 40px -30px rgba(15, 54, 40, 0.7);
			}

			.button:focus-visible,
			button:focus-visible,
			input:focus-visible,
			a:focus-visible {
				outline: 3px solid rgba(248, 179, 77, 0.7);
				outline-offset: 3px;
			}

			.grid {
				display: grid;
				gap: 1.5rem;
			}

			.card {
				background: rgba(255, 250, 242, 0.9);
				border: 1px solid var(--line);
				border-radius: 1.5rem;
				padding: 1.6rem;
				box-shadow: var(--shadow);
			}

			.muted {
				color: var(--muted);
			}

			.divider {
				border-top: 1px solid var(--line);
				margin: 2.5rem 0 0;
			}

			@media (max-width: 900px) {
				section {
					padding: 4rem 0;
				}

				.container {
					width: min(680px, 90vw);
				}
			}

			@media (max-width: 600px) {
				section {
					padding: 3.5rem 0;
				}

				.button {
					width: 100%;
				}
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
