---
import Layout from '~/layouts/Layout.astro';
import TopNav from '~/components/TopNav.astro';
import Hero from '~/components/Hero.astro';
import SocialProofBand from '~/components/SocialProofBand.astro';
import HowItWorks from '~/components/HowItWorks.astro';
import Benefits from '~/components/Benefits.astro';
import WhoItsFor from '~/components/WhoItsFor.astro';
import PricingTeaser from '~/components/PricingTeaser.astro';
import FAQ from '~/components/FAQ.astro';
import FinalCTA from '~/components/FinalCTA.astro';
import Footer from '~/components/Footer.astro';

const metadata = {
  title: 'MowingBidder - Instant mowing quotes',
  ignoreTitleTemplate: true,
  description:
    'Enter an address to get weekly + bi-weekly mowing prices based on property square footage and your pricing formula.',
  openGraph: {
    siteName: 'Mowing Bidder',
    type: 'website',
    images: [
      {
        url: '~/assets/images/og.png',
        width: 1200,
        height: 628,
      },
    ],
  },
};
---

<Layout metadata={metadata}>
  <TopNav />
  <main>
    <Hero />
    <SocialProofBand />
    <HowItWorks />
    <Benefits />
    <WhoItsFor />
    <PricingTeaser />
    <FAQ />
    <FinalCTA />
  </main>
  <Footer />
</Layout>
